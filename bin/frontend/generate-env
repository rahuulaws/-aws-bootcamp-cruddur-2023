#!/usr/bin/env ruby

require 'erb'

puts "Generating frontend-react-js.env..."

template = File.read '/workspace/-aws-bootcamp-cruddur-2023/backend-flask/bin/erb/frontend-react-js.env.erb'
puts "Loaded template from /workspace/-aws-bootcamp-cruddur-2023/backend-flask/bin/erb/frontend-react-js.env.erb"

content = ERB.new(template).result(binding)
puts "Generated content for frontend-react-js.env"

filename = "frontend-react-js.env"
File.write(filename, content)

puts "Wrote content to frontend-react-js.env"

